model Service {
  id            Int     @id @default(autoincrement())
  clienteNome   String
  telefone      String
  veiculoModelo String
  veiculoAno    String
  veiculoCor    String
  tipoServico   String
  precoServico  Decimal
  descricao     String
  date          String
  end           String
  image         String
  in_progress   Boolean

  @@map("service")
}

model User {
  id Int @id @default(autoincrement())
  nomeUsuario String
  senha String

  @@map("user")
}